@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IEnumerable<IPublishedContent>>


<!--Meet Our Team-->
<section class="our-team py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="title-orange">@ViewData["MemberSectionTitle"]?.ToString()</h1>
            </div>
        </div>
        <div
            class="row d-flex justify-content-between align-items-center"
        >
            <div class="col-6 col-md-5">
                <h2 class="ingress">@ViewData["MemberSectionIngress"]?.ToString()</h2>
            </div>
            <div class="col-5 col-md-3 text-end">
                <a href="/about/team-members" class="blackline-button-anchor"
                    >Browse Team
                    <i class="fa-solid fa-arrow-up-right"></i
                ></a>
            </div>
        </div>
        <div class="row pt-5">
            @foreach(var item in Model){
                @await Html.PartialAsync("cards/_TeamMemberCard", item)
            }
        </div>
    </div>
</section>
