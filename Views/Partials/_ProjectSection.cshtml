@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IEnumerable<IPublishedContent>>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

<section class="project-case-studies my-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center py-5">
                <h1 class="title-orange">
                    Projects & Case Studies
                </h1>
                <h2 class="ingress">
                    Let's Looks Our Global Projects
                </h2>
            </div>
            <div
                class="row d-flex justify-content-between py-3 m-0 business-cards"
            >
                @foreach(var item in Model)
                {
                    @await Html.PartialAsync("cards/_ProjectCard", item)
                }
            </div>
            <div class="col-12 d-flex justify-content-center pb-5">
                <a class="all-black-button-anchor" href="/projects"
                    >All Recent Projects<i
                        class="fa-solid fa-arrow-up-right"
                    ></i
                ></a>
            </div>
        </div>
    </div>
</section>